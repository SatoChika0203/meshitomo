<% if current_user.gender == "male" %>
  <% @recruitments=@recruitments_male_only %>
    <%= render 'recruitment', recruitments: @recruitments %>
<% elsif current_user.gender == "female" %>
  <% @recruitments=@recruitments_female_only %>
    <%= render 'recruitment', recruitments: @recruitments %>
<% elsif current_user.gender == "other" %>
  <% @recruitments=@recruitments_anyone %>
    <%= render 'recruitment', recruitments: @recruitments %>
<% end %>
