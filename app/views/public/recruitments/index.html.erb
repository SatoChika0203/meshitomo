<h2>募集一覧</h2>
<!--さあ、まだ見ぬ仲間たちと食事を共にしましょう-->

<div class="search-form">
  <%= form_with url: search_recruitments_path, method: :get, local: true do |search| %>
    <%= search.text_field :keyword, value: @keyword %>
    <%= search.select :prefectures, Recruitment.prefectures.keys, value: @prefectures %>
    <%= search.date_field :schedule_one, value: @schedule_one %>
    <%= search.submit "検索" %>
  <% end %>
</div>

<div>
  <% if current_user.gender == "male" %>
    <% @recruitments_male_only.each do |recruitment| %>
      <% if recruitment.is_valid==true %>
        <div>
          <p><%= image_tag recruitment.shop.img %></p>
        </div>
        <div>
          <p><%= link_to recruitment.title, recruitment_path(recruitment.id) %></p>
          <p><%= link_to recruitment.shop.name, recruitment.shop.url %></p>
          <p><%= recruitment.shop.address %></p>
          <p>希望日　<%= recruitment.schedule_one %>　<%= recruitment.schedule_two %>　<%= recruitment.schedule_three %></p>
          <p>募集期限　<%= recruitment.deadline %></p>
        </div>
        <div>
          <% if recruitment.user.image.attached? %>
            <p><%= image_tag recruitment.user.image, size: "80x80" %></p>
          <% else %>
            <p><%= image_tag 'no_image', size: "80x80" %></p>
          <% end %>
          <p><%= link_to recruitment.user.nickname, user_path(recruitment.user.id) %></p>
        </div>
      <% end %>
    <% end %>
  <% elsif current_user.gender == "female" %>
    <% @recruitments_female_only.each do |recruitment| %>
      <% if recruitment.is_valid==true %>
        <div>
          <p><%= image_tag recruitment.shop.img %></p>
        </div>
        <div>
          <p><%= link_to recruitment.title, recruitment_path(recruitment.id) %></p>
          <p><%= link_to recruitment.shop.name, recruitment.shop.url %></p>
          <p><%= recruitment.shop.address %></p>
          <p>希望日　<%= recruitment.schedule_one %>　<%= recruitment.schedule_two %>　<%= recruitment.schedule_three %></p>
          <p>募集期限　<%= recruitment.deadline %></p>
        </div>
        <div>
          <% if recruitment.user.image.attached? %>
            <p><%= image_tag recruitment.user.image, size: "80x80" %></p>
          <% else %>
            <p><%= image_tag 'no_image', size: "80x80" %></p>
          <% end %>
          <p><%= link_to recruitment.user.nickname, user_path(recruitment.user.id) %></p>
        </div>
      <% end %>
    <% end %>
  <% else current_user.gender == "male" && "female" && "other" %>
    <% @recruitments_anyone.each do |recruitment| %>
      <% if recruitment.is_valid==true %>
        <div>
          <p><%= image_tag recruitment.shop.img %></p>
        </div>
        <div>
          <p><%= link_to recruitment.title, recruitment_path(recruitment.id) %></p>
          <p><%= link_to recruitment.shop.name, recruitment.shop.url %></p>
          <p><%= recruitment.shop.address %></p>
          <p>希望日　<%= recruitment.schedule_one %>　<%= recruitment.schedule_two %>　<%= recruitment.schedule_three %></p>
          <p>募集期限　<%= recruitment.deadline %></p>
        </div>
        <div>
          <% if recruitment.user.image.attached? %>
            <p><%= image_tag recruitment.user.image, size: "80x80" %></p>
          <% else %>
            <p><%= image_tag 'no_image', size: "80x80" %></p>
          <% end %>
          <p><%= link_to recruitment.user.nickname, user_path(recruitment.user.id) %></p>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>

