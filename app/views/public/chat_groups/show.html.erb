<div class="container">
    <h2 class="text-center"><%= @recruitment.title %>のメッセージグループです</h2>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 text-center mt-4">
            <button class="btn btn-color-green" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false"
              aria-controls="collapseExample">
                参加者
            </button>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="overflow-hidden">
               <div id="collapseExample" class="collapse">
                    <div class="border bg-white p-3">
                        <div class="row">
                        <% @chat_group_users.each do |chat_group_user| %>
                            <% if chat_group_user.user.image.attached? %>
                                <div class="ml-2 mr-1">
                                    <p><%= image_tag chat_group_user.user.image, size: "80x80" %></p>
                            <% else %>
                                <div class="ml-2 mr-1">
                                    <p><%= image_tag 'no_image', size: "80x80" %></p>
                            <% end %>
                                    <p class="text-center"><%= link_to chat_group_user.user.nickname, user_path(chat_group_user.user.id) %></p>
                                </div>
                        <% end %>
                        </div>
                    </div>
               </div>
            </div>
        </div>
    </div>
</div>


<div class="text-center mt-3">
<% if @recruitment.user.id == current_user.id %>
<%= link_to "食事に行きました！", confirm_recruitment_chat_groups_path(@recruitment.id), method: :post %>
<% end %>
</div>

<div class="container mt-5">
    <div class="mt-5">
        <%= form_with model: @chat, url: chats_path, method: :create do |chat| %>
            <p><%= chat.text_area :chat %></p>
            <p><%= chat.submit "送信" %></p>
            <%= chat.hidden_field :chat_group_id, :value => @chat_group.id %>
        <% end %>
    </div>

    <div class="bg-white border border-radius-50 p-5 d-flex align-items-center" style="height: 390px !important;">
        <div class="h-100 overflow-auto container">
            <% @chats.each do |chat| %>
            <div class="row py-3 border-bottom">
              <div class="col-lg-2 col-md-3 col-sm-4 col-4">
                <% if chat.user.image.attached? %>
                    <p class="text-center"><%= link_to image_tag(chat.user.image, size: "70x70"), user_path(chat.user.id) %></p>
                <% else %>
                    <p class="text-center"><%= link_to image_tag('no_image', size: "70x70"), user_path(chat.user.id) %></p>
                <% end %>
              </div>
              <div class="my-auto col-lg-10 col-md-9 col-sm-8 col-8 text-wrap">
                    <p><%= chat.chat %></p>
              </div>
            </div>
            <% end %>
        </div>
    </div>
</div>




