<h2 class="text-center">メッセージグループ一覧</h2>

<div class="container mt-5">
  <div class="row">
    <% @chat_groups.each do |chat_group| %>
    <div class="col-lg-4 col-md-4 col-sm-4 col-4">
      <p class="text-right"><%= image_tag chat_group.recruitment.shop.img %></p>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-8 col-8 pl-5">
      <h4><%= link_to chat_group.recruitment.title, recruitment_path(chat_group.recruitment.id) %></h4>
      <p class="mt-3 ml-4">お店　<%= link_to chat_group.recruitment.shop.name, chat_group.recruitment.shop.url %></p>
      <p class="mt-4 ml-4"><%= link_to "メッセージグループへ行く", recruitment_chat_groups_path(chat_group.recruitment.id) %></p>
    </div>
    <% end %>
  </div>
</div>
<%= paginate @chat_groups %>