<h1>お気に入りのお店を探してみましょう</h1>

<%= form_with url: shops_path, method: :get do %>
  <%= label_tag 'keyword', 'Keyword:' %>
  <%= text_field_tag 'keyword' %>
  <%= submit_tag '検索' %>
<% end %>

<pre>
  <%= @shops %>
</pre>

<% if @shops.present? %>
  <h2>お店の検索結果</h2>
  <ul>
    <% @shops.each do |shop| %>
      <li>
        <strong><%= shop['name'] %></strong><br>
        <%= image_tag shop['photo']['pc']['m'] %>
        <%= shop['genre']['catch'] %><br>
        
        住所: <%= shop['address'] %><br>
        アクセス: <%= shop['access'] %><br>
        営業時間: <%= shop['open'] %><br>
        定休日: <%= shop['close'] %><br>
        店舗URL: <%= shop['urls']['pc'] %><br>
      </li>
    <% end %>
  </ul>
<% end %>

