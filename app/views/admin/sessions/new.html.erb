<div class="m-5">
<h2 class="text-center">管理者ログイン画面</h2>

  <div class="container text-center bg-white my-5 py-5 border-radius-80">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="pb-4">  
        <div class="field row mb-4">
          <p class="col-lg-12 col-md-12 col-sm-12 col-12 mb-1"><%= f.label :email, "メールアドレス" %></p>
          <p class="col-lg-12 col-md-12 col-sm-12 col-12"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
        </div>
      
        <div class="field row mb-4">
          <p class="col-lg-12 col-md-12 col-sm-12 col-12 mb-1"><%= f.label "パスワード" %></p>
          <p class="col-lg-12 col-md-12 col-sm-12 col-12"><%= f.password_field :password, autocomplete: "current-password" %></p>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン情報を記録する" %>
        </div>
      <% end %>
    
      <div class="actions">
        <p class="text-center"><button class="btn btn-secondary my-3" type="submit">ログイン</button></p>
      </div>
    <% end %>
    
    <div class="my-4">
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
