<!DOCTYPE html>
<html>
  <head>
    <title>Meshitomo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscroll/2.4.1/jquery.jscroll.min.js"></script>
    <!--<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>-->
    <!--<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>-->
     <!--script>
      document.addEventListener('turbolinks:load', () => {
        $('[data-toggle="tooltip"]').tooltip()
      })
    </script-->
  </head>

  <body style="background-color:#fffce7;">
    <header class="sticky-top">
      <nav class="navbar navbar-expand-md navbar-light nav-bg">
          <a class="navbar-brand p-3" href="/recruitments"><%= image_tag('meshitomo_logo.png') %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
            <div class="justify-content-end collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <div class="search-form">
                    <%= form_with url: search_recruitments_path, method: :get, local: true do |search| %>
                      <%= search.text_field :keyword, value: @keyword %>
                      <%= search.select :prefecture, Recruitment.prefectures.keys, {include_blank: '都道府県を選択してください'} %>
                      <%= search.date_field :schedule, value: @schedule %>
                      <%= search.submit "検索" %>
                    <% end %>
                  </div>                
                  <li class="nav-item m-2">
                    <%= link_to "お気に入りのお店", user_user_shops_path(current_user.id) %>
                  </li>
                  <li class="nav-item m-2" data-toggle="tooltip" data-bs-placement="bottom" title="メッセージ">
                    <%= link_to image_tag('mail.png'), chat_groups_path %>
                  </li>
                  <li class="nav-item m-2" data-toggle="tooltip" data-bs-placement="bottom" title="お店を探す">
                    <%= link_to image_tag('cock.png'), shops_path %>
                  </li>
                  <li class="nav-item  dropdown m-2" data-toggle="tooltip" title="ユーザー情報">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <%= image_tag('people.png') %>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                      <li><a class="dropdown-item"><%= link_to "マイページ", user_path(current_user.id) %></a></li>
                      <li><a class="dropdown-item" href="#history-recruitments">募集履歴</a></li>
                      <li><a class="dropdown-item" href="#history-applications">応募履歴</a></li>
                      <li><a class="dropdown-item" href="#user-shops">お気に入りのお店</a></li>
                    </ul>
                  </li>
                <% elsif admin_signed_in? %>
                  <li class="m-2">
                    <%= link_to "会員一覧", admin_users_path %>
                  </li>
                  <li class="m-2">
                    <%= link_to "募集一覧", admin_recruitments_path %>
                  </li>
                  <li class="m-2">
                    <%= link_to "メッセージグループ一覧", admin_chat_groups_path %>
                  </li>
                  <li class="m-2">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </li>
                <% else  %>
                  <li class="m-2">
                    <%= link_to "新規登録", new_user_registration_path %>
                  </li>
                  <li class="m-2">
                    <%= link_to "ログイン", new_user_session_path %>
                  </li>
                <% end %>
               </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <% if user_signed_in? %>
      <div class="fixed-bottom d-flex justify-content-end">
        <%= link_to new_recruitment_path, class: "d-block rounded-circle mb-4 mr-4", style: 'width:130px; border:2px solid #999;' do %>
          <%= image_tag 'ramen.png', class: "img-fluid p-2" %>
        <% end %>
      </div>
    <% end %>
  </body>
</html>
